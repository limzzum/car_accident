<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DangerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="621dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="322dp"
                android:layout_height="50dp"
                android:fontFamily="@font/cafe24ssuroundair"
                android:gravity="center"
                android:lineSpacingExtra="15dp"
                android:text="교통사고 위험 지수"
                android:textSize="28sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#000000" />


            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:fontFamily="@font/cafe24ssuroundair"
                android:text=""
                android:textSize="30sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:fontFamily="@font/cafe24ssuroundair"
                android:gravity="center"
                android:lineSpacingExtra="15dp"
                android:text="빨강 : 위험"
                android:textSize="25sp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:fontFamily="@font/cafe24ssuroundair"
                android:text=""
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:fontFamily="@font/cafe24ssuroundair"
                android:gravity="center"
                android:lineSpacingExtra="15dp"
                android:text="주황 : 주의 "
                android:textSize="25sp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:fontFamily="@font/cafe24ssuroundair"
                android:text=""
                android:textSize="30sp" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:fontFamily="@font/cafe24ssuroundair"
                android:gravity="center"
                android:lineSpacingExtra="15dp"
                android:text="초록 : 안전"
                android:textSize="25sp" />


        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <LinearLayout
            android:id="@+id/side_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/maps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawableBottom="@drawable/baseline_place_black_20"/>

            <Button
                android:id="@+id/chart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawableBottom="@drawable/baseline_trending_up_black_20"/>

            <Button
                android:id="@+id/danger"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawableBottom="@drawable/baseline_warning_black_20"/>

            <Button
                android:id="@+id/how"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawableBottom="@drawable/baseline_light_mode_black_20"/>

            <Button
                android:id="@+id/info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawableBottom="@drawable/baseline_info_black_20"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>